
<body class= "list_page">


    <a href="/form">Create a new batch</a>
    <!-- <a href="/users/logout" id="logoutUser" class="logout">Click here to log out</a> -->

  <div class="row">
    <div class="small-6 small-centered columns scroll-div">

    <% for (var i = 0; i < batches.length; i++) { %>
      <% var currentBatch = batches[i]; %>


        <div id="panel_<%= currentBatch._id %>" class="panel callout">
          <input type="hidden" name="db_id" value="<%= currentBatch._id %>">
          <div class="batch" id="batch_<%= currentBatch._id %>">

            <div>
              Batch Id: <%= currentBatch.batch %>
            </div>
            <div>
              Candy Type: <%= currentBatch.candyType %>
            </div>
            <div>
              Cook Date: <%= currentBatch.cook_date %>
            </div>
            <div>
              Expiration Date: <%= currentBatch.exp_date %>
            </div>
            <div>
              Notes: <%= currentBatch.notes %>
            </div>
            <div>
              Sugar: <%= currentBatch.sugarId %>
            </div>
            <div>
              Butter: <%= currentBatch.butterId %>
            </div>
            <div>
              Almonds: <%= currentBatch.almondId %>
            </div>
            <div>
              Chocolate: <%= currentBatch.chocolateId %>
            </div>
            <div>
              Dust: <%= currentBatch.dustId %>
            </div>
            <div>
              Cook Order: <%= currentBatch.cook_order %>
            </div>
            <div>
              User: <%= currentBatch.user %>
            </div>
          </div>
          <ul class="actions button-group stack-for-small even-2">
            <li class="button_cont"><a class="deleteButton button small" id="<%= currentBatch._id %>">Delete</a></li class="button_cont">
            <li class="button_cont"><a class="editButton button small" id="<%= currentBatch._id %>">Edit</a></li>
          </ul>
        </div>

    <% } %>
  </div>
  </div><!-- end of row -->

</body>
